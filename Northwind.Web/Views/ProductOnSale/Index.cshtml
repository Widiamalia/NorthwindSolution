@model IEnumerable<Northwind.Contracts.Dto.Product.ProductDto>

<h2 style="text-align: center">Product on Sale</h2>

@foreach (var item in Model)
{

 <div class="col-md-6 col-xl-4">
     <a asp-action="Details" asp-route-id="@item.ProductId">
    <div class="card mb-3">
       <img class="card-img-top" style="height:450px" src="@Url.Content("../Resources/images/" +item.ProductPhotos.FirstOrDefault().PhotoFilename)" alt="" >
           <div class="card-body">
               <h5 class="card-title">@Html.DisplayFor(modelItem => item.Category.CategoryName)</h5>
                 <p class="card-text">
                 </p>
                 <h5 style="text-align: center">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().UnitPrice)
                 @Html.DisplayFor(modelItem => item.UnitPrice)
                  <br>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().UnitsInStock)
                 @Html.DisplayFor(modelItem => item.UnitsInStock)
                 <br>
                 @*@Html.DisplayNameFor(model => model.FirstOrDefault().Category.CategoryName)
                 @Html.DisplayFor(modelItem => item.Category.CategoryName)
                 <br>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().ProductPhotos)
                 @Html.DisplayFor(modelItem => item.ProductPhotos)*@
               <p class="card-text">
             <small class="text-muted">Last updated 3 mins ago</small>
            </p>
         </div>
       </div>
       </a>
     </div>
}
                