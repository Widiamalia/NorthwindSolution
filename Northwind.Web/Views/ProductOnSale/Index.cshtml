@model IEnumerable<Northwind.Contracts.Dto.Product.ProductDto>
<h4>Product On Sale</h4>

@foreach (var item in Model)
{

 <div class="col-md-6 col-xl-4">
    <div class="card mb-3">
       <img class="card-img-top" src="@Url.Content("../Resources/images/" +item.ProductPhotos.FirstOrDefault().PhotoFilename)" alt="" >
           <div class="card-body">
               <h5 class="card-title">@Html.DisplayFor(modelItem => item.Category.CategoryName)</h5>
                 <p class="card-text">
                 </p>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().ProductName)
                 @Html.DisplayFor(modelItem => item.ProductName)
                 <br>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().UnitPrice)
                 @Html.DisplayFor(modelItem => item.UnitPrice)
                 <br>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().Category.CategoryName)
                 @Html.DisplayFor(modelItem => item.Category.CategoryName)
                 <br>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().ProductPhotos)
                 @Html.DisplayFor(modelItem => item.ProductPhotos)
               <p class="card-text">
             <small class="text-muted">Last updated 3 mins ago</small>
           </p>
         </div>
       </div>
     </div>
}
                